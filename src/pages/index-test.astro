---
import Layout from '../components/Layout.astro';

// Test without content collections
const testPosts = [
  {
    slug: 'test-post',
    data: {
      title: 'Test Post',
      date: new Date('2025-01-01'),
      excerpt: 'This is a test post to see if the layout works.',
      categories: ['Test']
    }
  }
];
---

<Layout title="Test Homepage" description="Testing the layout">
  <div class="landing-page">
    <h1>Homepage Test</h1>
    <p>Testing if the Layout component works correctly.</p>
    
    <section>
      <h2>Test Posts</h2>
      {testPosts.map(post => (
        <article>
          <h3>
            <a href={`/blog/${post.slug}`}>{post.data.title}</a>
          </h3>
          <p>{post.data.excerpt}</p>
          <time>{post.data.date.toLocaleDateString()}</time>
        </article>
      ))}
    </section>
  </div>
</Layout>
